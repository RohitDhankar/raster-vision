#!/bin/bash

set -e

if [[ -n "${RASTER_VISION_DEBUG}" ]]; then
    set -x
fi

function usage() {
    echo -n \
        "Usage: $(basename "$0")
Build library for integration or a release.
"
}

if [[ "${BASH_SOURCE[0]}" == "$0" ]]; then
    if [[ "${1:-}" == "--help" ]]; then
        usage
    else
        if [[ "${PLATFORM}" == "arm64" ]]; then
            docker build \
                --platform linux/arm64 --build-arg CUDA_VERSION="11.3.1" \
                -t "raster-vision-${IMAGE_TYPE}-arm64" \
                -f Dockerfile .
        else
            docker build \
                --platform linux/amd64 --build-arg CUDA_VERSION="11.3.1" \
                -t "raster-vision-${IMAGE_TYPE}-amd64" \
                -f Dockerfile .
            ./scripts/test
        fi
    fi
fi
